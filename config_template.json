  "performance": {
    "use_gpu": true,
    "buffer_size": 1,
    "similarity_threshold": 0.80,
    "tts_speed": 1.0,
    "max_caption_width": 30,
    "enable_emotion_detection": true
  },
  
  "paths": {
    "models_dir": "models",
    "voice_samples_dir": ".",
    "logs_dir": "logs"
  },
  
  "advanced": {
    "enable_dynamic_voices": false,
    "enable_similarity_detection": true,
    "auto_clear_captions": true,
    "silence_threshold": 5.5
