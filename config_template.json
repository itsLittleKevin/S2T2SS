{
  "_comment": "S2T2SS Configuration Template - Easy deployment settings",
  
  "deployment": {
    "version": "1.0.0",
    "setup_date": "auto-generated",
    "platform": "auto-detected"
  },
  
  "language_pairs": {
    "default": "chinese_to_english",
    "available": [
      "chinese_to_english",
      "english_to_chinese", 
      "chinese_to_japanese",
      "english_to_japanese",
      "auto_to_english",
      "auto_to_chinese"
    ]
  },
  
  "narrator_modes": {
    "default": "direct",
    "available": [
      "direct",
      "first_person",
      "casual_narrator", 
      "professional_narrator",
      "adaptive",
      "translate"
    ]
  },
  
  "audio": {
    "enable_tts": true,
    "enable_vb_audio": true,
    "sample_rate": 16000,
    "chunk_duration": 5.0,
    "voice_reference": "sample02.wav"
